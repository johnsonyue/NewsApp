<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="johnsonyue.project.newsclientbeta"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="johnsonyue.project.newsclientbeta.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="johnsonyue.project.newsclientbeta.SearchActivity"
            ></activity>
        <activity
            android:name="johnsonyue.project.newsclientbeta.NewsDetailActivity"
            ></activity>
        <activity
            android:name="johnsonyue.project.newsclientbeta.ViewCommentActivity"
            ></activity>
        <activity
            android:name="johnsonyue.project.newsclientbeta.LoginActivity"
            ></activity>
        <activity
            android:name="johnsonyue.project.newsclientbeta.RegisterActivity"
            ></activity>
    </application>

</manifest>