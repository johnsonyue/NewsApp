<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >
    <ImageView
        android:id="@+id/fav_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
	    android:layout_marginTop="8dp"
	    android:contentDescription="@string/hint"
	    android:src="@drawable/pic"
        ></ImageView>
    
    <TextView
        android:id="@+id/fav_title"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fav_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:hint="@string/hint" >
	
	</TextView>
	<TextView
	    android:id="@+id/fav_snap_shot"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/fav_pic"
	    android:layout_below="@id/fav_title"
	    android:layout_marginLeft="8dp"
	    android:layout_marginTop="8dp"
	    android:hint="@string/hint"
	    android:gravity="center" />
    
    <TextView
	    android:id="@+id/fav_date"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/fav_snap_shot"
	    android:layout_below="@id/fav_title"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="8dp"
	    android:gravity="center"
	    android:hint="@string/hint"
	    ></TextView>
	
	<TextView
	    android:id="@+id/fav_news_source"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/fav_date"
	    android:layout_toRightOf="@id/fav_pic"
	    android:layout_marginTop="8dp"
	    android:gravity="center"
	    android:hint="@string/hint" />

</RelativeLayout>