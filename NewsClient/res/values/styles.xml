<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="GreenTheme">
        <item name="main_background_value">@drawable/main_background</item>
        <item name="title_bar_background_value">@drawable/title_bar_background</item>
        <item name="category_bar_background_value">@drawable/category_bar_background</item>
        <item name="edit_text_background_value">@drawable/edit_text_background</item>
        <item name="text_view_background_value">@color/light_gray</item>
        <item name="body_text_style_value">@style/body_text_style</item>
        <item name="button_color_value">@drawable/button_selector</item>
        <item name="button_text_color_value">@color/gray</item>
        <item name="edit_background_value">@drawable/edit_background</item>
        <item name="check_box_background_value">@drawable/check_box_background</item>
        <item name="radio_btn_text_color_value">@color/black</item>
    </style>
    
    <style name="DarkTheme">
        <item name="main_background_value">@drawable/main_background_dark</item>
        <item name="title_bar_background_value">@drawable/title_bar_background_dark</item>
        <item name="category_bar_background_value">@drawable/category_bar_background_dark</item>
        <item name="edit_text_background_value">@drawable/edit_text_background_dark</item>
        <item name="text_view_background_value">@color/black</item>
        <item name="body_text_style_value">@style/body_text_style_dark</item>
        <item name="button_color_value">@drawable/button_selector_dark</item>
        <item name="button_text_color_value">@color/white</item>
        <item name="edit_background_value">@drawable/edit_background_dark</item>
        <item name="check_box_background_value">@drawable/check_box_background_dark</item>
        <item name="radio_btn_text_color_value">@color/white</item>
    </style>
	
    <style name="titlebar_title_style">
        <item name="android:textSize">23.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFB3B3B3</item>
    </style>
    
    <style name="category_title_style">
        <item name="android:textSize">23.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="body_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="body_text_style_dark">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
</resources>